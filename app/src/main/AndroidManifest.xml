        android:supportsRtl="true"
        android:theme="@style/Theme.SvBookMarket">
        <activity android:name=".activities.UserOrder"></activity>
        <activity android:name=".activities.ForgotPassword" />
        <activity android:name=".activities.ConfirmationActivity"></activity>
        <activity android:name=".activities.ForgotPassword" />
        <activity android:name=".activities.UserManageActivity" />
        <activity android:name=".activities.CategoryDetailActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.FeatureActivity" />
