<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_suggest"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:backgroundTint="#1BB7AC"
        app:cardCornerRadius="14dp"
    app:layout_constraintCircleRadius="14dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgSuggest"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/login1"> </ImageView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBookSuggest"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dinner Party: A laugh out loud ..."
                        android:textColor="@color/white"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tvAuthorSuggest"
                        android:layout_width="190dp"
                        android:layout_height="15dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textStyle="bold"
                        android:text="by Tracy Bloom"
                        android:textColor="#80FFFFFF"
                        android:textSize="12dp">

                    </TextView>

                    <TextView android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:text="Liệu bạn còn có thể tin tưởng vào tâm trí mình? Hãy cùng chúng tôi khám phá các nguyên lí khoa học của suy nghĩ, cảm giác và trí nhớ với cuốn sách “hại não” này. * Đánh lừa nhận thức giác quan của bạn * Trở thành bậc thầy đánh lạc hướng * Chơi trò đánh lừa bạn bè với những kí ức giả * Tìm hiểu thật nhiều thủ thuật tâm trí thú vị"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="10dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        />

                    <TextView
                        android:id="@+id/tvNumReviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="6 Purchases"
                        android:textColor="@color/white"
                        android:textSize="12dp"> </TextView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>