<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:layout_marginBottom="8dp"
    android:backgroundTintMode="multiply"
    android:checkable="true"
    android:focusable="true"
    app:cardCornerRadius="14dp"
    android:layout_marginHorizontal="24dp"
    app:strokeColor="#A4858C94">
<!--//346-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="65dp"
            android:layout_height="82dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:contentDescription="book-cover"
            android:src="@drawable/ic_login_rafiki" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="19dp"

            android:orientation="vertical">

            <TextView
                android:maxLines="2"
                android:id="@+id/tv_bookname"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="The Case for Trump"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Lotto.LTD"
                android:maxWidth="250dp"
                android:textColor="@color/fade_gray" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:layout_marginBottom="2dp"
                android:text="200.000Ä‘"
                android:textColor="#0F52BA"
                android:textFontWeight="600"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/decreaseNumber"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_decreasebtn"
                    android:elevation="4dp"
                    android:src="@drawable/ic_subtract" />

                <TextView
                    android:id="@+id/tv_numbers"
                    android:textAlignment="center"
                    android:layout_width="30dp"
                    android:maxLines="1"
                    android:maxWidth="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="99" />
                <ImageButton
                    android:id="@+id/increaseNumber"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_increasebtn"
                    android:backgroundTintMode="add"
                    android:elevation="4dp"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
