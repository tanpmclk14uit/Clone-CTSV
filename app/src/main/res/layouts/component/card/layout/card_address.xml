<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:clickable="true"
    android:paddingHorizontal="24dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingStart="12dp">

        <TextView
            android:textSize="16sp"
           android:textStyle="bold"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Robin Food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="0123456789"
            />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="920, ki tuc xa khu A, DH quoc gia hcm"
            />

        <TextView
            android:id="@+id/tvSecondAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phuong Linh Trung"
            />

        <TextView
            android:id="@+id/tvThirdAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quan Thu Duc"
            />

        <TextView
            android:id="@+id/tvFourthAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tp. Ho Chi Minh"
            />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>