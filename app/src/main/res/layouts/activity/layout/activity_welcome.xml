<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity">

    <TextView
        android:gravity="center"
        android:id="@+id/tvWelcome"
        android:layout_width="322sp"
        android:layout_height="37sp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Welcome to Book Store"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/tvExplore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="34sp"
        app:layout_editor_absoluteY="173sp"/>

    <TextView
        android:id="@+id/tvExplore"
        android:layout_width="85sp"
        android:layout_height="24sp"
        android:layout_marginBottom="616dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Explore us"
        android:textColor="@color/disable"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="153sp"
        app:layout_editor_absoluteY="210sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="354.38sp"
        android:layout_height="216.02sp"
        android:layout_marginTop="64dp"
        android:background="@drawable/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExplore"/>

    <Button
        android:id="@+id/btnLogin"
        style="@style/btn_blue"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/roboto_regular"
        android:background="@drawable/ripple"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
        app:layout_constraintVertical_bias="0.409"
        app:layout_editor_absoluteX="55.98dp"
        app:layout_editor_absoluteY="600sp"/>

    <TextView
        android:id="@+id/tvContinueAsGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Continue as guest"
        android:textColor="@color/blue_light"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>