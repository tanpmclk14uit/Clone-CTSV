<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_gray"
    tools:context=".activities.HomeActivity"
    tools:showIn="@layout/activity_home">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_homeToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_gray"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tb_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/img_baseline_menu" />

            <SearchView
                android:id="@+id/tb_searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="3"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/tb_cart"
                android:layout_toEndOf="@+id/tb_menu"
                android:background="@drawable/bg_home_search"
                android:elevation="6dp"
                android:touchscreenBlocksFocus="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tb_cart"
                app:layout_constraintStart_toEndOf="@+id/tb_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tb_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/img_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tb_searchView" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>
