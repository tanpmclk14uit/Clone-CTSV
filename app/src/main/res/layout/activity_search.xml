<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ln_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginHorizontal="24dp">
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search" />

        <ListView
            android:id="@+id/rc_suggest_search"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="invisible"
            tools:listitem="@layout/card_suggest_search" />
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ln_recent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="30dp">
        <TextView android:text="Recent Searches"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_bold"
            android:alpha="0.5"/>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/rc_recent_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/card_recent_search"/>
    </LinearLayout>
</LinearLayout>