<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeatureActivity"
    android:orientation="vertical">

   <com.google.android.material.appbar.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.google.android.material.appbar.MaterialToolbar
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           app:navigationIcon="@drawable/ic_baseline_arrow_back_gray">
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/Feature"
               android:fontFamily="@font/roboto_bold"
               android:textSize="25dp"
               android:textAlignment="center"
               android:layout_marginStart="100dp">
           </TextView>
           <ImageView
               android:clickable="true"
               android:focusable="true"
               android:layout_marginStart="100dp"
               android:src="@drawable/ic_baseline_shopping_cart_24"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@color/white">
           </ImageView>
       </com.google.android.material.appbar.MaterialToolbar>
   </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="6dp"
        android:layout_width="400dp"
        android:layout_height="375dp"
        android:background="@color/yellow_back">
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Thoughts Exactly"
            android:fontFamily="@font/roboto_bold"
            android:textSize="25dp">
        </TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feature_recycler"
        android:layout_height="240dp"
        android:layout_width="match_parent"
        android:layout_marginTop="-200dp"
        android:orientation="vertical"
        tools:listitem="@layout/card_feature">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>