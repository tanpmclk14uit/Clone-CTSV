<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FeatureActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        app:navigationIcon="@drawable/img_back_arrow"
        app:navigationIconTint="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/Feature"
            android:textAlignment="center"
            android:textSize="25dp"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_shopping_cart_24"></ImageView>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="375dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="40dp"
            android:background="@color/yellow_back"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="My Thoughts Exactly"
                android:textSize="25dp"> </TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feature_recycler"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="-200dp"
            android:orientation="vertical"
            tools:listitem="@layout/card_feature"> </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
    </ScrollView>
</LinearLayout>