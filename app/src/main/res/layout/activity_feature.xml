<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FeatureActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        app:navigationIcon="@drawable/img_back_arrow"
        app:navigationIconTint="@color/black"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/Feature"
            android:textAlignment="center"
            android:textSize="25dp"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_outline_cart"></ImageView>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/yellow_back"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="My Thoughts Exactly"
                android:textSize="25dp"> </TextView>
            <TextView android:text=""
                android:background="@color/black"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="'An Unflinching, unputdownable book'"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian"
                android:alpha=".3"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feature_recycler"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="-200dp"
            android:orientation="vertical"
            tools:listitem="@layout/card_feature" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:text="Bestselling"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24dp"
        android:textColor="@color/black_header"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_Bestselling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/card_book"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="31dp"
        android:text="You may also like"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24dp"
        android:textColor="@color/black_header"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_Suggest"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/card_suggest" />
</LinearLayout>
    </ScrollView>
</LinearLayout>